<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_change_sale_order_date" model="ir.ui.view">
	    <field name="name">Change Sale Order Date</field>
	    <field name="model">sale.order.date.change</field>
	    <field name="arch" type="xml">
		    <form string="Change Sale Order Date">
		    	<group>
		        	<field name="sale_order_date"/>
		        </group>
		        <footer>
			        <button name="change_sale_order_date" class="btn-primary" string="Submit" type="object"/>
			        <button string="Cancel" class="btn-default" special="cancel"/>
		        </footer>
		    </form>
	    </field>
	</record>

	<record id="action_change_order_date" model="ir.actions.act_window">
	    <field name="name">Change Sale Order Date</field>
	    <field name="type">ir.actions.act_window</field>
	    <field name="res_model">sale.order.date.change</field>
	    <field name="view_mode">form</field>
	    <field name="target">new</field>
	</record>

</odoo>