<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_custom_drop_options_form" model="ir.ui.view">
        <field name="name">Rental Drop Options Form</field>
        <field name="model">rental.drop.option.custom</field>
        <field name="arch" type="xml">
            <form string="Rental Drop Options">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_custom_drop_options_tree" model="ir.ui.view">
        <field name="name">Rental Drop Options Tree</field>
        <field name="model">rental.drop.option.custom</field>
        <field name="arch" type="xml">
            <tree string="Rental Drop Options Tree">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_custom_drop_options" model="ir.actions.act_window">
        <field name="name">Drop Options</field>
        <field name="res_model">rental.drop.option.custom</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
